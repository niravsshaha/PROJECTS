<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvAvailableBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/text_balance_updating"
        android:textColor="#c51162"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/pbBalanceInMain"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignTop="@+id/tvAvailableBalance"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/tvAvailableBalance"
        android:layout_toRightOf="@+id/tvAvailableBalance"
        android:indeterminate="true" />

    <Button
        android:id="@+id/bMakePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAvailableBalance"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_button"
        android:padding="5dp"
        android:text="Make Payment"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/bScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bMakePayment"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_button"
        android:padding="5dp"
        android:text="Scan QR Code"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/bAddAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bScan"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:padding="5dp"
        android:text="Add Amount"
        android:textColor="#ffffff" />

</RelativeLayout>
